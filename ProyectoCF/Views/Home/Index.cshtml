@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a ProyectoCF</h1>
    <p class="lead">Tu rol es: <strong>@ViewBag.Rol</strong></p>
</div>

@if (ViewBag.Rol == "Docente" || ViewBag.Rol == "Estudiante")
{
    <h2 class="mt-4">Tus Cursos</h2>

    @if (ViewBag.Cursos != null && ((IEnumerable<dynamic>)ViewBag.Cursos).Any())
    {
        <table class="table table-bordered table-hover mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Docente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in ViewBag.Cursos)
                {
                    <tr>
                        <td>@curso.Nombre</td>
                        <td>@curso.Descripcion</td>
                        <td>@curso.DocenteNombre</td>
                        <td>
                            <a asp-action="Details" asp-controller="Cursos" asp-route-id="@curso.Id" class="btn btn-info btn-sm">Ver Material</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No tienes cursos asignados actualmente.</p>
    }
}
else
{
    <p class="text-muted">Actualmente no tienes cursos disponibles para mostrar.</p>
}
