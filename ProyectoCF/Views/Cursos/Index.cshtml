@model IEnumerable<ProyectoCF.Models.CursoViewModel>

<h2>Cursos</h2>
@if (ViewBag.Rol == "Administrador")
{
    <a asp-action="Create" class="btn btn-primary mb-3">Crear Curso</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Docente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.Nombre</td>
                <td>@curso.Descripcion</td>
                <td>@curso.DocenteNombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-warning btn-sm">Editar</a>
                        @if (ViewBag.Rol == "Administrador")
                        {
                            <form asp-action="Delete" asp-route-id="@curso.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        }
                </td>
            </tr>
        }
    </tbody>
</table>
