@model IEnumerable<ProyectoCF.Models.Material>

<h2>Materiales</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Agregar Material</a>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Curso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Titulo</td>
                <td>@material.Descripcion</td>
                <td>@material.Curso?.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@material.Id" class="btn btn-warning btn-sm">Editar</a>
                    @if (ViewBag.Rol == "Administrador")
                    {
                        <form asp-action="Delete" asp-route-id="@material .Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
